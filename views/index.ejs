<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css">
  <title>Home Page</title>
</head>

<body>
  <%- include('./partials/_navbar.ejs') %>
  <% if (user) { %>
  <h1 class="is-size-1 has-text-centered mt-5">Welcome to the airlines, <%= user.username %>!</h1>
  <p class="is-size-5 has-text-centered">You can find and book a flight by going <a href="/flights"><strong>here!</strong></a></p>
  <% } else { %>
  <h1 class="is-size-1 has-text-centered mt-5">Welcome to the airlines, guest!</h1>
  <p class="is-size-5 has-text-centered">Begin planning your trip by <a href="/auth//sign-up"><strong>Signing up here!</strong></a></p>
  <% } %>
  <figure class="image is-16by9 mt-5 is-clipped">
    <img src="/images/landing.jpg" alt="home image">
  </figure>
</body>

</html>